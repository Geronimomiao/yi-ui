{
    "name": "yi-ui",
    "version": "0.2.4",
    "description": "a lightweight ui for vue2.x",
    "author": "springleo <782655835@qq.com>",
    "repository": "lq782655835/yi-ui",
    "main": "lib/index.js",
    "files": [
        "dist/*",
        "lib/*",
        "index.js",
        "src/*"
    ],
    "scripts": {
        "github": "sh deploy.sh",
        "gh": "sh gh.sh",
        "dev": "vue-cli-service serve --open",
        "build": "vue-cli-service build --target lib --name YIUI ./index.js",
        "build:site": "site=true vue-cli-service build",
        "lint": "vue-cli-service lint --fix",
        "format": "prettier --write './**/*.{js,ts,vue,json}'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run format && git add ."
        }
    },
    "dependencies": {
        "material-design-icons": "^3.0.1",
        "popper.js": "^1.15.0",
        "vue": "^2.5.17"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^3.0.3",
        "@vue/cli-plugin-eslint": "^3.0.3",
        "@vue/cli-service": "^3.0.3",
        "babel-eslint": "^10.0.1",
        "eslint": "^5.8.0",
        "eslint-plugin-vue": "^5.0.0-0",
        "husky": "^1.2.1",
        "node-sass": "^4.10.0",
        "prettier": "^1.15.3",
        "sass-loader": "^7.1.0",
        "vue-template-compiler": "^2.5.17"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "rules": {},
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ]
}
